@model List<BillsPC_CleanArchitecture.Data.DTO.Pokemon_DTO>

@{
    ViewData["Title"] = "Select Pokémon for Battle";
}

<style>
    /* Full screen container centering content */
    .center-container {
        display: flex;
        justify-content: center; /* horizontal center */
        flex-direction: column;
        align-items: center;
    }
</style>

<div class="center-container">
    <div style="display: inline-block; border: 3px solid red; border-radius: 8px; padding: 16px; background: white;">
        <h2>Select Pokémon for Battle</h2>

        <!-- Existing single battle form -->
        <form method="post" asp-action="StartBattle">
            <div class="mb-3">
                <label for="pokemon1Id" class="form-label">Select Pokémon 1</label>
                <select id="pokemon1Id" name="pokemon1Id" class="form-select" required>
                    <option value="">-- Choose Pokémon --</option>
                    @foreach (var p in Model)
                    {
                        <option value="@p.PokemonID">@p.Name (@p.Region)</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label for="pokemon2Id" class="form-label">Select Pokémon 2</label>
                <select id="pokemon2Id" name="pokemon2Id" class="form-select" required>
                    <option value="">-- Choose Pokémon --</option>
                    @foreach (var p in Model)
                    {
                        <option value="@p.PokemonID">@p.Name (@p.Region)</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Start Battle</button>
        </form>

        <hr />

        <!-- New form for team battle -->
        <form method="post" asp-action="StartTeamBattle">
            <p>Or, battle your whole team vs a random AI team of 6 Pokémon!</p>

            <!-- Hidden inputs or multiple selects for the player's team could go here if needed -->
            <!-- But if the team is selected elsewhere or auto-built in controller, just a button here -->

            <button type="submit" class="btn btn-success">Start Team Battle (6 vs 6)</button>
        </form>

    </div>
</div>
