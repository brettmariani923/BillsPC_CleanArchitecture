@model List<BillsPC_CleanArchitecture.Data.DTO.CurrentTeam_DTO>

<h2>My Pokémon</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Slot</th>
            <th>Image</th>
            <th>Name</th>
            <th>HP</th>
            <th>Attack</th>
            <th>Defense</th>
            <th>Special Attack</th>
            <th>Special Defense</th>
            <th>Speed</th>
            <th>Ability</th>
            <th>Legendary</th>
            <th>Region</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pokemon in Model)
        {
            <tr>
                <td>@pokemon.Slot</td>
                <td>
                    <img src="@pokemon.ImageUrl" alt="@pokemon.Name" width="80" />
                </td>
                <td>@pokemon.Name</td>
                <td>@pokemon.HP</td>
                <td>@pokemon.Attack</td>
                <td>@pokemon.Defense</td>
                <td>@pokemon.SpecialAttack</td>
                <td>@pokemon.SpecialDefense</td>
                <td>@pokemon.Speed</td>
                <td>@pokemon.Ability</td>
                <td>@(pokemon.Legendary ? "Yes" : "No")</td>
                <td>@pokemon.Region</td>
                <td>
                    <!-- Example buttons to update or remove -->
                    <div style="display: inline-flex; gap: 8px;">
                        <form asp-action="Remove" method="post">
                            <input type="hidden" name="slot" value="@pokemon.Slot" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>

                        <form asp-action="Update" method="post">
                            <input type="hidden" name="slot" value="@pokemon.Slot" />
                            <input type="number" name="pokemonId" placeholder="New Pokemon ID" required />
                            <button type="submit" class="btn btn-primary btn-sm">Update</button>
                        </form>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
