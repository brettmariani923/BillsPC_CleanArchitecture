@model List<BillsPC_CleanArchitecture.Data.DTO.CurrentTeam_DTO>

<style>
    /* Center the container horizontally */
    .center-container {
        display: flex;
        justify-content: center; /* horizontal center */
        padding: 16px;
    }

    /* Styled container with border and padding */
    .table-wrapper {
        border: 3px solid red;
        border-radius: 8px;
        padding: 16px;
        background-color: white;
        overflow-x: auto; /* Scroll horizontally if needed */
        max-width: 100%; /* Don't exceed viewport width */
    }

    /* Table styling */
    table {
        min-width: 1000px; /* enforce minimum width for horizontal scroll */
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        border: 1px solid #ddd;
        text-align: center; /* horizontal center */
        vertical-align: middle; /* vertical center */
    }

    th {
        background-color: #f8f9fa;
    }

    img {
        width: 80px;
        height: auto;
        display: block;
        margin: 0 auto; /* center images horizontally */
    }
</style>


<div class="center-container">
    <div class="table-wrapper">
        <table class="table table-striped table-bordered; text: center">
            <thead>
                <tr>
                    <th>Slot</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>HP</th>
                    <th>Attack</th>
                    <th>Defense</th>
                    <th>Special Attack</th>
                    <th>Special Defense</th>
                    <th>Speed</th>
                    <th>Ability</th>
                    <th>Legendary</th>
                    <th>Region</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pokemon in Model)
                {
                    <tr>
                        <td>@pokemon.Slot</td>
                        <td><img src="@pokemon.ImageUrl" alt="@pokemon.Name" /></td>
                        <td>@pokemon.Name</td>
                        <td>@pokemon.HP</td>
                        <td>@pokemon.Attack</td>
                        <td>@pokemon.Defense</td>
                        <td>@pokemon.SpecialAttack</td>
                        <td>@pokemon.SpecialDefense</td>
                        <td>@pokemon.Speed</td>
                        <td>@pokemon.Ability</td>
                        <td>@(pokemon.Legendary ? "Yes" : "No")</td>
                        <td>@pokemon.Region</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
